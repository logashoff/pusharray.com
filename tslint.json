{
  "rules": {
    "class-name": true,
    "interface-name": [true, "always-prefix"],
    "comment-format": [true, "check-space"],
    "indent": [true, "spaces"],
    "max-line-length": [true, 100],
    "one-line": [true,
      "check-open-brace",
      "check-whitespace"
    ],
    "no-var-keyword": true,
    "quotemark": [true,
      "single"
    ],
    "semicolon": true,
    "whitespace": [true,
      "check-branch",
      "check-operator",
      "check-separator",
      "check-type",
      "check-module"
    ],
    "typedef-whitespace": [true, {
      "call-signature": "nospace",
      "index-signature": "nospace",
      "parameter": "nospace",
      "property-declaration": "nospace",
      "variable-declaration": "nospace"
    }],
    "no-internal-module": false,
    "no-trailing-whitespace": true,
    "no-inferrable-types": true,
    "variable-name": [true,
      "check-format",
      "allow-leading-underscore"
    ],
    "curly": true,
    "eofline": true,
    "align": [true, "parameters", "statements", "statements"]
  }
}
