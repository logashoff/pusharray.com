{
  "rules": {
    "class-name": true,
    "comment-format": [true, "check-space"],
    "indent": [true, "spaces", 2],
    "max-line-length": 100,
    "one-line": [true,
      "check-open-brace",
      "check-whitespace"
    ],
    "no-var-keyword": true,
    "quotemark": [true,
      "single"
    ],
    "semicolon": true,
    "whitespace": [true,
      "check-branch",
      "check-operator",
      "check-separator",
      "check-type",
      "check-module"
    ],
    "typedef-whitespace": [true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }],
    "next-line": [true,
      "check-catch",
      "check-else"
    ],
    "no-internal-module": false,
    "no-trailing-whitespace": true,
    "no-inferrable-types": true,
    "no-null": true,
    "boolean-trivia": true,
    "type-operator-spacing": true,
    "prefer-const": true,
    "no-in-operator": true,
    "variable-name": [true,
      "check-format",
      "allow-leading-underscore"
    ],
    "curly": true,
    "eofline": true
  }
}
